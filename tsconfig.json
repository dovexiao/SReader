{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "react-jsx","react-native", "react-test-renderer", "node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@stores/*": ["src/stores/*"],
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/components/*"],
      "@services/*": ["src/services/*"],
      "@assets/*": ["src/assets/*"],
      "@types/*": ["src/types/*"],
      "@screens/*": ["src/screens/*"],
      "@hooks/*": ["src/hooks/*"],
      "@navigator/*": ["src/navigator/*"]
    }
  }
}
